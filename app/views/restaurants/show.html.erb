<h1>Restaurant details</h1>

<h2> <%= @restaurant.name %> </h2>
<ul>
  <li> Address: <%= @restaurant.address %> </li>
  <% if @restaurant.phone_number = "" %>
    <li> Phone number: NA </li>
    <% else %>
    <li> <%= @restaurant.phone_number %> </li>
    <% end %>
  <li> Category: <%= @restaurant.category %> </li>
</ul>

<h3>Reviews</h3>
<% @restaurant.reviews.each do |review| %>
  <ul>
    <li>
      <p><%= review.content %> - <%= review.rating %> /5 </p>

    </li>
  </ul>
<% end %>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"  %>
<br>
<br>
<%= link_to "back to index", restaurants_path %>

